@model NuGetGallery.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home";
    ViewBag.Tab = "Home";
}
<section class="featured">
    <div>
        <h1>ReSharper Gallery</h1>
        <p>Host your ReSharper's plugins here!</p>
        <a class="install" href="http://visualstudiogallery.msdn.microsoft.com/27077b70-9dad-4c64-adcf-c7cf6bc9970c">Install NuGet</a>
    </div>
    <img src="@Url.Content("~/content/images/hero.png")" alt="Manage ReSharper Extensions Dialog Window" /> 
</section> 

<section class="aggstats">
    <span class="stat">
        <span id="UniquePackages" class="num"></span> unique extesions
    </span>
    <span class="stat">
        <span id="Downloads" class="num"></span>total package downloads
    </span>
    <span class="stat">
        <span id="TotalPackages" class="num"></span>total packages
    </span>
</section>

<section class="aggstatserr">
    <span class="err">an error occurred while retrieving statistics</span>
</section>

@if(Model.Announcement != null) {
<section class="release">
    @Model.Announcement
</section>
}

@if(Model.About != null) {
<section class="info">
    @Model.About
</section>
}

@section BottomScripts
{
    @* Right now this is the only page that uses this script. If we increase our usage of it, we should put it in our bundles *@
    @Scripts.Render("~/Scripts/stats.js")
    <script>
        $(getStats);
    </script>
}
